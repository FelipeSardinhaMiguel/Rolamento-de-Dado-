<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AtividadeRolarDado.MainPage">

    <ScrollView>
        <VerticalStackLayout
            
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Escolha um dado para rolarmos!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                x:Name="ExibirNumeroLabel"
                Style="{StaticResource Headline}"/>

            <Picker
                HorizontalOptions="Center"
                x:Name="NumPicker"
                Title="Pré Opções"> 

                <Picker.Items>
                    <x:String>1</x:String>
                    <x:String>4</x:String>
                    <x:String>6</x:String>
                    <x:String>10</x:String>
                    <x:String>20</x:String>
                    <x:String>29</x:String>
                    <x:String>69</x:String>
                    <x:String>100</x:String>
                </Picker.Items>

            </Picker>

            <Button
                HorizontalOptions="Center"
                x:Name="RolarBtn"
                Text="Rolar o Dado."
                Clicked="RolarBtn_Clicked"
                SemanticProperties.Hint="Clique e gere um número aleatório"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
